.main-posts
  - @posts.each do |post|
    = link_to post_path(post) do
      .post
        .post__title
          = post.text
        .post__image
          = image_tag post.image.url
        .post__info
          = link_to do
            .post__info__user-box
              .post__info__user-box__icon
                = image_tag post.user.image.thumb100
              .post__info__user-box__name
                = post.user.name
          .post__info__day
            = post.created_at.strftime("%Y年%m月%d日 %H時%M分")
        .post__details
          .post__details__adress
            - if post.pref_id?
              = link_to do
                .post__details__adress__pref-city
                  = post.pref.name
            - if post.city_id?
              = link_to do
                .post__details__adress__pref-city
                  = post.city.name
          -# .post__details__tag
          -#   = link_to do
          -#     タグ
        .post__action
          .post__action__good-btn
            - unless current_user == post.user
              - if post.good?(current_user)
                = form_for(post.goods.find_by(user_id: current_user.id), method: :delete) do |f|
                  = f.submit 'Good_delete', class: 'good-btn', id: 'good-btn-delete'
              - else
                = form_for(post.goods.build) do |f|
                  = f.hidden_field :post_id, value: post.id
                  = f.submit 'Good', class: 'good-btn'
          .good-number
            - if post.good?(current_user)
              = post.goods.length
            - else
              = post.goods.length - 1
            good!
          .post__action__comment-btn
            = link_to new_comment_path(post_id: post.id) do
              -# %i.comment-btn.far.fa-comment-dots
              .good-btn
                Comment