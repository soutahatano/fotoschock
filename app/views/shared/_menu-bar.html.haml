.menu-bar
  %ul.menu-bar__list
    %li
      = link_to root_path do
        %i.fa.fa-home
        %span
          ホーム
    %li
      = link_to new_post_path do
        %i.fa.fa-image
        %span
          投稿
      %ul
        %li
          = link_to sachdemo_posts_path do
            %i.far.fa-window-restore
            %span
              投稿一覧
    %li
      = link_to search_users_path do
        %i.fas.fa-align-justify
        %span
          ユーザー一覧
      %ul
        %li
          = link_to users_path do
            %i.far.fa-address-book
            %span
              フォロー一覧
    - if user_signed_in?
      %li
        = link_to edit_user_path(current_user) do
          %i.fas.fa-user-cog"
          %span
            ユーザー編集
        %ul
          %li
            = link_to destroy_user_session_path, method: :delete do
              %i.fas.fa-sign-out-alt
              %span
                ログアウト
    - else
      %li
        = link_to new_user_registration_path, method: :get do
          %i.fas.fa-user-plus
          %span
            新規登録
        %ul
          %li
            = link_to new_user_session_path, method: :get do
              %i.fas.fa-sign-out-alt
              %span
                ログイン